<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/gray"
  android:orientation="vertical"
  tools:context=".MainActivity">


  <EditText
    android:id="@+id/edtNumberShow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:ems="10"
    android:gravity="right"
    android:inputType="textPersonName"
    android:paddingTop="10pt"
    android:text="0"
    android:textColor="@color/white"
    android:textSize="30sp"/>

  <TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginBottom="1pt">

      <Button
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:layout_marginRight="1pt"
        android:layout_weight="1"
        android:background="@color/whiteback"
        android:onClick="btnClean"
        android:text="AC"
        android:textSize="18sp"
        tools:ignore="RtlHardcoded"/>

      <Button
        android:id="@+id/btnplusormins"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:layout_marginRight="1pt"
        android:layout_weight="1"
        android:background="@color/whiteback"
        android:onClick="btnNumbers"
        android:text="+/-"
        android:textSize="18sp"
        tools:ignore="RtlHardcoded"/>

      <Button
        android:id="@+id/button3"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:layout_marginRight="1pt"
        android:layout_weight="1"
        android:background="@color/whiteback"
        android:onClick="btnPercent"
        android:text="%"
        android:textSize="18sp"
        tools:ignore="RtlHardcoded"/>

      <Button
        android:id="@+id/btndiv"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:layout_weight="1"
        android:background="@color/orange"
        android:onClick="btnOperator"
        android:text="/"
        android:textSize="18sp"/>
    </TableRow>

    <TableRow
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginBottom="1pt">

      <Button
        android:id="@+id/btn7"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:layout_marginRight="1pt"
        android:layout_weight="1"
        android:background="@color/whiteback"
        android:onClick="btnNumbers"
        android:text="7"
        android:textSize="18sp"
        tools:ignore="RtlHardcoded"/>

      <Button
        android:id="@+id/btn8"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:layout_marginRight="1pt"
        android:layout_weight="1"
        android:background="@color/whiteback"
        android:onClick="btnNumbers"
        android:text="8"
        android:textSize="18sp"
        tools:ignore="RtlHardcoded"/>

      <Button
        android:id="@+id/btn9"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:layout_marginRight="1pt"
        android:layout_weight="1"
        android:background="@color/whiteback"
        android:onClick="btnNumbers"
        android:text="9"
        android:textSize="18sp"
        tools:ignore="RtlHardcoded"/>

      <Button
        android:id="@+id/btnmul"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:layout_weight="1"
        android:background="@color/orange"
        android:onClick="btnOperator"
        android:text="*"
        android:textSize="18sp"/>
    </TableRow>

    <TableRow
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginBottom="1pt">

      <Button
        android:id="@+id/btn4"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:layout_marginRight="1pt"
        android:layout_weight="1"
        android:background="@color/whiteback"
        android:onClick="btnNumbers"
        android:text="4"
        android:textSize="18sp"
        tools:ignore="RtlHardcoded"/>

      <Button
        android:id="@+id/btn5"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:layout_marginRight="1pt"
        android:layout_weight="1"
        android:background="@color/whiteback"
        android:onClick="btnNumbers"
        android:text="5"
        android:textSize="18sp"
        tools:ignore="RtlHardcoded"/>

      <Button
        android:id="@+id/btn6"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:layout_marginRight="1pt"
        android:layout_weight="1"
        android:background="@color/whiteback"
        android:onClick="btnNumbers"
        android:text="6"
        android:textSize="18sp"
        tools:ignore="RtlHardcoded"/>

      <Button
        android:id="@+id/btnsum"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:layout_weight="1"
        android:background="@color/orange"
        android:onClick="btnOperator"
        android:text="+"
        android:textSize="18sp"/>
    </TableRow>

    <TableRow
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginBottom="1pt">

      <Button
        android:id="@+id/btn1"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:layout_marginRight="1pt"
        android:layout_weight="1"
        android:background="@color/whiteback"
        android:onClick="btnNumbers"
        android:text="1"
        android:textSize="18sp"
        tools:ignore="RtlHardcoded"/>

      <Button
        android:id="@+id/btn2"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:layout_marginRight="1pt"
        android:layout_weight="1"
        android:background="@color/whiteback"
        android:onClick="btnNumbers"
        android:text="2"
        android:textSize="18sp"
        tools:ignore="RtlHardcoded"/>

      <Button
        android:id="@+id/btn3"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:layout_marginRight="1pt"
        android:layout_weight="1"
        android:background="@color/whiteback"
        android:onClick="btnNumbers"
        android:text="3"
        android:textSize="18sp"
        tools:ignore="RtlHardcoded"/>

      <Button
        android:id="@+id/btnsub"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:layout_weight="1"
        android:background="@color/orange"
        android:onClick="btnOperator"
        android:text="-"
        android:textSize="18sp"/>
    </TableRow>

  </TableLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
      android:id="@+id/btn0"
      android:layout_width="60pt"
      android:layout_height="30pt"
      android:layout_marginRight="1pt"
      android:layout_weight="1"
      android:background="@color/whiteback"
      android:onClick="btnNumbers"
      android:text="0"
      android:textSize="18sp"
      tools:ignore="OnClick,RtlHardcoded"/>

    <Button
      android:id="@+id/btndot"
      android:layout_width="60pt"
      android:layout_height="30pt"
      android:layout_marginRight="1pt"
      android:layout_weight="0"
      android:background="@color/whiteback"
      android:onClick="btnNumbers"
      android:text="."
      android:textSize="18sp"
      tools:ignore="RtlHardcoded"/>

    <Button
      android:id="@+id/btnequal"
      android:layout_width="60pt"
      android:layout_height="30pt"
      android:layout_weight="1"
      android:background="@color/orange"
      android:onClick="btnEqual"
      android:text="="
      android:textSize="18sp"/>
  </LinearLayout>
</LinearLayout>